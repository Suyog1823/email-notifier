<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 


<main class="container">

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="display-6">Update Details</h1>
            <form action="/tracker/<%= tracks._id %>?_method=PATCH" method="POST">
                <div class="mb-3">
                    <label for="fname" class="form-label">First Name</label>
                    <input type="text" class="form-control" name="fname" id="fname" placeholder="First Name" value="<%= tracks.fname %> ">
                </div>
                <div class="mb-3">
                    <label for="lname" class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="lname" id="lname" placeholder="Last Name" value="<%= tracks.lname %> ">
                </div>
                
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea class="form-control" name="desc" id="desc" rows="5" value="<%= tracks.desc %>"></textarea>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email" value="<%= tracks.email %>">
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="flexCheckDefault" value="false">
                        <label class="form-check-label" for="flexCheckDefault">
                            Exiting
                        </label>
                        
                      </div>
                </div>
                <input type="text" class="form-control" name="extime" id="extime" placeholder="extime" value="<%=new Date().getHours() + ":" + new Date().getMinutes() + ":" + new Date().getSeconds();%>">
                <button type="submit" class="btn btn-success btn-small">Submit</button>
            </form>
        </div>
    </div>
</main>
<%- include("../partials/footer") %>
